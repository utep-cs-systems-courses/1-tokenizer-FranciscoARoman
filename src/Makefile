# compiler flags.  -g for debug, -O3 for optimization
CFLAGS=-g -O3

# to make code simpler make list of obj files
OBJS = history.o uimain.o tokenizer.o

# first target is built by default
all: uimain

# include file dependencies
history.o: tokenizer.h
tokenizer.o: tokenizer.h
uimain.o: uimain.c

# $@=target, $^=prerequisites
uimain: $(OBJS)
	cc -o uimain $(CFLAGS) $(OBJS)

# deletes files generated by compilation
clean:
	rm -f *.o uimain tokenizer history *~ *#

# Now add to run the file
run: uimain
	./uimain
